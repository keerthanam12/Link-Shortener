<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Primary Meta Tags -->
    <title>URL Shortener</title>
    <meta name="title" content="URL Shortener">
    <meta name="description"
        content="A URL Shortener made with the help of Node.js and MongoDB as Database. Other Technologies used are Express.js, EJS and Mongoose.">

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:title" content="URL Shortener">
    <meta property="og:description"
        content="A URL Shortener made with the help of Node.js and MongoDB as Database. Other Technologies used are Express.js, EJS and Mongoose.">

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:title" content="URL Shortener">
    <meta property="twitter:description"
        content="A URL Shortener made with the help of Node.js and MongoDB as Database. Other Technologies used are Express.js, EJS and Mongoose.">

    <!-- Favicon -->
    <link rel="shortcut icon" href="img/favicon.png" type="image/x-icon">

    <link rel="stylesheet" href="css/style.css">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>

<body>
    <div class="my-5 container text-center">
        <h1>URL Shortener <img src="img/logo.png" alt="" width="40px"></h1>
        <div class="my-5 text-center">
            <form action="/" method="post">
                <div class="row text-center d-flex justify-content-center">
                    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8 col-8">
                        <input class="form-control form-control-lg" name="longURL" type="text" placeholder="Long URL" autocomplete="off" autofocus= "true" required>
                    </div>
                    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8 col-8 my-2">
                        <input class="form-control form-control-lg customAlias" name="customAlias" type="text"
                            placeholder="Custom Alias (Optional)" autocomplete="off">
                    </div>
                </div>
                <button class="my-3 btn btn-dark" type="submit">Shorten</button>
                <div class="alert col-lg-6 col-md-6 col-sm-6 col-xs-6 col-6 mx-auto error">
                    <%= error %>
                </div>
            </form>
        </div>
        <div>
            <p class="mx-auto pt-2 w-50 bg-transparent" style="height: 60px; font-size: 30px;">Shorten URL:
                <a href="/<%= newURL.shortID %>" target="_blank">
                    <%= newURL.shortURL %>
                </a>
            </p>
        </div>
    </div>

    <script>
        var field = document.querySelector('.customAlias');

        field.addEventListener('keypress', function (event) {
            var key = event.keyCode;
            if (key === 32) {
                event.preventDefault();
            }
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
</body>

</html>